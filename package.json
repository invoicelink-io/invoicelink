		"eslint-plugin-svelte": "^2.39.3",
		"globals": "^15.4.0",
		"postcss": "^8.4.38",
		"postcss-import": "^16.1.0",
		"postcss-nesting": "^12.1.5",
		"prettier": "^3.3.1",
		"prettier-plugin-svelte": "^3.2.4",
		"prettier-plugin-tailwindcss": "^0.6.2",
		"prisma": "^5.15.0",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.0",
		"svelte-sequential-preprocessor": "^2.0.1",
