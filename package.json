{
	"name": "app.invoicelink.io",
	"description": "The invoicelink core application",
	"author": "Ratul Maharaj",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --open",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"db:push": "pnpm dlx prisma db push",
		"db:deploy": "pnpm dlx prisma migrate deploy",
		"db:seed": "pnpm dlx prisma db seed",
		"postinstall": "pnpm dlx prisma generate"
	},
	"devDependencies": {
		"@melt-ui/pp": "^0.1.2",
		"@melt-ui/svelte": "^0.55.2",
		"@playwright/test": "^1.38.1",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-vercel": "^3.0.3",
		"@sveltejs/kit": "^1.25.2",
		"@types/node": "^20.8.5",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.51.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.34.0",
		"postcss": "^8.4.31",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.5",
		"prisma": "^5.5.2",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"svelte-sequential-preprocessor": "^2.0.1",
		"tailwindcss": "^3.3.3",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.11",
		"vitest": "^0.34.6"
	},
	"type": "module",
	"engines": {
		"node": ">=18.0.0 <19.0.0",
		"pnpm": ">=8"
	},
	"dependencies": {
		"@lucia-auth/adapter-prisma": "^3.0.2",
		"@lucia-auth/oauth": "^3.3.1",
		"@lucia-auth/sveltekit": "^0.6.11",
		"@prisma/client": "^5.5.2",
		"@svelte-put/shortcut": "^3.0.0",
		"lucia": "^2.7.1",
		"svelte-french-toast": "^1.2.0",
		"zod": "^3.22.4"
	},
	"prisma": {
		"seed": "pnpm dlx ts-node --esm prisma/seed.ts"
	}
}
