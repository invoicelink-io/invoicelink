{
	"name": "app",
	"description": "The invoicelink core application",
	"author": "Ratul Maharaj",
	"version": "1.1.0",
	"private": true,
	"homepage": "https://app.invoicelink.io",
	"scripts": {
		"dev": "vite dev --port 5173 --mode development",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"prepare": "svelte-kit sync && pnpm dlx prisma generate --schema ./node_modules/@invoicelink/db/schema.prisma",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@eslint/js": "^9.8.0",
		"@invoicelink/config": "workspace:*",
		"@playwright/test": "^1.45.3",
		"@skeletonlabs/skeleton": "^2.10.2",
		"@skeletonlabs/tw-plugin": "^0.4.0",
		"@svelte-put/clickoutside": "^3.0.2",
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/adapter-vercel": "^5.4.1",
		"@sveltejs/kit": "^2.5.20",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@tailwindcss/forms": "^0.5.7",
		"@types/node": "^22.1.0",
		"autoprefixer": "^10.4.19",
		"daisyui": "^4.12.10",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"globals": "^15.9.0",
		"postcss": "^8.4.40",
		"postcss-import": "^16.1.0",
		"postcss-nesting": "^12.1.5",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.5",
		"svelte-sequential-preprocessor": "^2.0.1",
		"sveltekit-superforms": "^2.16.1",
		"tailwindcss": "^3.4.7",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.3",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.3.5",
		"vitest": "^2.0.5"
	},
	"type": "module",
	"packageManager": "pnpm@8.15.9",
	"engines": {
		"node": "20.x",
		"pnpm": "8"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.6.8",
		"@invoicelink/db": "workspace:*",
		"@invoicelink/lib": "workspace:*",
		"@invoicelink/ui": "workspace:*",
		"@lucia-auth/adapter-prisma": "4.0.1",
		"@paralleldrive/cuid2": "^2.2.2",
		"@prisma/client": "5.18.0",
		"@sendgrid/client": "^8.1.3",
		"@sentry/sveltekit": "^8.22.0",
		"@svelte-put/shortcut": "^3.1.1",
		"@sveltejs/adapter-node": "^5.2.2",
		"arctic": "^1.9.2",
		"bits-ui": "^0.21.13",
