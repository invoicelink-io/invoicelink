{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "outputs": [".svelte-kit/**", ".vercel/**"],
      "dependsOn": ["format", "lint", "check"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
