{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^db:generate", "^build"]
    },
    "app#build": {
      "env": [
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "GOOGLE_REDIRECT_URI",
        "APPLE_KEY_ID",
        "APPLE_CLIENT_ID",
        "APPLE_TEAM_ID",
        "APPLE_CERTIFICATE",
        "APPLE_REDIRECT_URI",
        "PUBLIC_CLOUDINARY_CLOUD_NAME",
        "PUBLIC_CLOUDINARY_UPLOAD_PRESET",
        "CLOUDINARY_URL",
        "PUBLIC_POSTHOG_API_KEY",
        "PUBLIC_SENTRY_DSN",
        "SENDGRID_API_KEY",
        "SENDGRID_CONTACT_LIST_ID"
      ]
    },
    "api#build": {
      "env": ["BROWSERLESS_API_TOKEN"]
    },
    "db#build": {
      "env": ["POSTGRES_PRISMA_URL", "POSTGRES_URL_NON_POOLING"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "lint": {
      "dependsOn": ["format", "^lint"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "persistent": true,
      "cache": false,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}
